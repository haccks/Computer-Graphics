#include <graphics.h>
#include <math.h>
#include <stdio.h>
#include <conio.h>
#define PI 3.14159265

int main()
{
    int gdriver = DETECT, gmode;
    double theta = 0.0, val, x,y;
    val = PI/ 180.0;
    initgraph(&gdriver, &gmode, "");

    setfillstyle(SOLID_FILL, RED);
    rectangle(0,100, 400,0);
    floodfill(1,1,WHITE);
    setfillstyle(SOLID_FILL, WHITE);
    rectangle(0,200, 400,100);
    floodfill(1,101,WHITE);
    setfillstyle(SOLID_FILL, GREEN);
    rectangle(0,300, 400,200);
    floodfill(1,201,WHITE);

    int i;
    while(!kbhit())
    {
        i++;
        setcolor(BLUE);
        circle(200+50*sin(i), 150+50*cos(i), 2);
        setcolor(BLUE);
        circle(200+50*(cos(i+40)),150+50*(sin(i+40)),2);

        setcolor(BLUE);
        x = 50 * cos((theta) * val);
        y = 50 * sin((theta) * val);
        printf("%f\t%f\n", x, y);
        setlinestyle(0,0,3);
        line(200,150, x+200,y+150);

        theta += 10%360;
        setcolor(WHITE);
        x = 50 * cos((theta) * val);
        y = 50 * sin((theta) * val);
        setlinestyle(0,0,3);
        line(200,150, x+200,y+150);

        theta += 15.0/2;

        setfillstyle(SOLID_FILL, WHITE);
        circle(200,150, 10);
        floodfill(200,150,WHITE);
        delay(5);
    }
    getch();
    closegraph();
    return 0;
}
